[
  {
    "name": "sample1",
    "port": 9997
  },
  {
    "name": "sample2",
    "port": 9998,
    "mappings": [
      {
        "req": {
          "method": "POST",
          "path": "/foo"
        },
        "res": {
          "statusCode": 201,
          "contentType": "plain/text",
          "body": "success"
        }
      },
      {
        "req": {
          "path": "/bar"
        },
        "res": {
          "statusCode": 202,
          "contentType": "application/json",
          "body": {
            "response": "/bar accessed."
          }
        }
      },
      {
        "req": {
          "method": "GET"
        },
        "res": {
          "statusCode": 200,
          "contentType": "application/json",
          "body": {
            "result": "OK"
          }
        }
      }
    ]
  },
  {
    "name": "sample3-tls",
    "port": 9999,
    "tls": {
      "key": "certs/server.key",
      "cert": "certs/server.crt"
    }
  }
]