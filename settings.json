[
  {
    "name": "minimal setting example",
    "port": 9997
  },
  {
    "name": "various routing example",
    "port": 9998,
    "defaultStatusCode": 404,
    "defaultContentType": "application/json",
    "defaultResBody": {
      "message": "This is default response."
    },
    "mappings": [
      {
        "req": {
          "method": "POST",
          "path": "/foo"
        },
        "res": {
          "statusCode": 201,
          "contentType": "text/plain",
          "body": "success"
        }
      },
      {
        "priority": 1,
        "req": {
          "path": "/bar"
        },
        "res": {
          "statusCode": 200,
          "contentType": "application/json",
          "body": {
            "response": "/bar accessed."
          }
        }
      },
      {
        "priority": 2,
        "req": {
          "method": "PUT",
          "path": "/bar"
        },
        "res": {
          "statusCode": 200,
          "contentType": "application/json",
          "body": "PUT /bar requested."
        }
      },
      {
        "req": {
          "method": "*",
          "path": "/wild/card/*"
        },
        "res": {
          "statusCode": 200,
          "contentType": "text/plain",
          "body": "wildcard method and path used."
        }
      }
    ]
  },
  {
    "name": "TLS example",
    "port": 9999,
    "tls": {
      "key": "certs/server.key",
      "cert": "certs/server.crt"
    }
  }
]